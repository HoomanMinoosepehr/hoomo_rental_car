<div class='container mt-3' style='width:35rem' >
    <h2>Make a profile to rent your car:</h2>
    <%= form_for @car do |f| %>
        <div class='mt-2'>
            <%= f.label :model,"Model:", class:'form-label' %>
            <%= f.text_field :model, class:'form-control',placeholder:'Insert the model of your car', required: true %>
        </div>
        <div class='mt-2'>
            <%= f.label :content,"Descriptions:", class:'form-label' %>
            <%= f.text_area :content, class:'form-control',placeholder:'Add you descriptions about the car' %>
        </div>
        <div class='mt-2'>
            <%= f.label :year,"Year:", class:'form-label' %>
            <%= f.select :year, options_for_select(@years), required: true %>
        </div>
        <div class='mt-2'>
            <%= f.label :mileage,"Mileage:", class:'form-label' %>
            <%= f.number_field :mileage, class:'form-control',placeholder:"Enter your car's mileage", required: true %>
        </div>
        <div class='mt-2'>
            <%= f.label :location,"Location:", class:'form-label' %>
            <%= f.text_field :location, class:'form-control',placeholder:"Enter your location", required: true %>
        </div>
        <div class='mt-2'>
            <%= f.label :price,"Price:", class:'form-label' %>
            <%= f.number_field :price, class:'form-control',placeholder:"Insert car's daily rent price", required: true %>
        </div>
        <div class='mt-2'>
            <%= f.label :image,"Picture:", class:'form-label' %>
            <%= f.file_field :image, class:'form-control', type:'file' %>
        </div>
        <%= f.submit "Submit", class:'mt-3 btn btn-outline-success' %>         
    <% end %>
</div>