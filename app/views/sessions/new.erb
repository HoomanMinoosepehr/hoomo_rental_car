<div class='container mt-3' style='width: 35rem' >
    <h2>Sign In</h2>
    <%= form_tag session_path, class:'mt-3' do %>
    <div class='mt-2'>
        <%= label_tag :email, 'Email', class:'form-label' %>
        <%= email_field_tag :email,nil , class:'form-control', placeholder:'Enter Your Email' %>
    </div>
    <div class='mt-2'>
        <%= label_tag :password, 'Password:', class:'form-label' %>
        <%= password_field_tag :password,nil, class:'form-control' %>
    </div>
    <%= submit_tag 'Sign In', class:'btn btn-outline-success mt-3' %>
    <% end %>
</div>