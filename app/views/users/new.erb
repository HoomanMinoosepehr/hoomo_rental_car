<div class='container mt-3' style='width: 35rem' >
    <h2>Sign Up</h2>
    <%= form_for @user, class:'mt-5' do |f| %>
    <div class='mt-3'>
        <%= f.label :first_name, "First Name:", class:'form-label' %>
        <%= f.text_field :first_name, class:'form-control', placeholder:'Your Name', required: true %>
    </div>
    <div class='mt-2'>
        <%= f.label :last_name, 'Last Name:', class:'form-label' %>
        <%= f.text_field :last_name, class:'form-control', placeholder:'Your Last Name', required: true %>
    </div>
    <div class='mt-2'>
        <%= f.label :email, 'Email', class:'form-label' %>
        <%= f.email_field :email, class:'form-control', placeholder:'Ente Your Email', required: true %>
    </div>
    <% if @user.errors %>
            <% @user.errors.messages[:email].each do |e| %>
                <div>
                    <small class='text-danger'><%= "• #{e}" %></small>
                </div>
            <% end %>
        <% end %>
    <div class='mt-2'>
        <%= f.label :password, 'Password:', class:'form-label' %>
        <%= f.password_field :password, class:'form-control' %>
        <small class='text-secondary'>• Your password should contain at least 8 characters and at least 1 uppercase letter.</small>
        <div id='error_explanation'>
        <ul>
        <% if @user.errors %>
            <% @user.errors.messages[:password].each do |e| %>
                <div>
                    <small class='text-danger'><%= "• #{e}" %></small>
                </div>
            <% end %>
        <% end %>
        </ul>
    </div>
    <div class='mt-2'>
        <%= f.label :password_confirmation, 'Repeat Your Password:', class:'form-label' %>
        <%= f.password_field :password_confirmation, class:'form-control' %>
    </div>
    <%= f.submit 'Sign Up', class:'btn btn-outline-success mt-3' %>
    <% end %>
</div>