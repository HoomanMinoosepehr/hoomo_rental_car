<div class='container mt-3' style='width: 35rem' >
    <h2>Edit Your Account Info:</h2>
    <%= form_for @user,method: :patch, class:'mt-5' do |f| %>
        <div class='mt-3'>
            <%= f.label :first_name, "First Name:", class:'form-label' %>
            <%= f.text_field :first_name, class:'form-control', placeholder:'Your Name' %>
        </div>
        <div class='mt-2'>
            <%= f.label :last_name, 'Last Name:', class:'form-label' %>
            <%= f.text_field :last_name, class:'form-control', placeholder:'Your Last Name' %>
        </div>
        <div class='mt-2'>
            <%= f.label :email, 'Email', class:'form-label' %>
            <%= f.email_field :email, class:'form-control', placeholder:'Ente Your Email' %>
        </div>
        <%= f.submit 'Confirm', class:'btn btn-success mt-3' %>
    <% end %>
</div>